<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        style="@style/GameFooterIcon"
        android:id="@+id/iv_fullscreen"
        android:contentDescription="@string/iv_fullscreen"
        android:src="@drawable/ic_fullscreen"
        app:layout_constraintLeft_toLeftOf="parent" />

    <View
        style="@style/VerticalDivider"
        android:id="@+id/divider_1"
        android:layout_height="0dp"
        android:background="@android:color/white"
        android:layout_marginTop="@dimen/base_margin"
        android:layout_marginBottom="@dimen/base_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_fullscreen" />

    <ImageView
        style="@style/GameFooterIcon"
        android:id="@+id/iv_clear_pins"
        android:contentDescription="@string/iv_clear_pins"
        android:src="@drawable/ic_clear_pins_strike"
        app:layout_constraintLeft_toLeftOf="@id/divider_1" />

    <ImageView
        style="@style/GameFooterIcon"
        android:id="@+id/iv_foul"
        android:contentDescription="@string/iv_foul"
        android:src="@drawable/ic_foul_inactive"
        app:layout_constraintLeft_toRightOf="@id/iv_clear_pins" />

    <View
        style="@style/VerticalDivider"
        android:id="@+id/pins_divider"
        android:layout_height="0dp"
        android:background="@android:color/white"
        android:layout_marginTop="@dimen/base_margin"
        android:layout_marginBottom="@dimen/base_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_foul" />

    <ImageView
        style="@style/GameFooterIcon"
        android:id="@+id/iv_match_play"
        android:contentDescription="@string/iv_match_play"
        android:src="@drawable/ic_match_play_none"
        app:layout_constraintLeft_toRightOf="@id/pins_divider" />

    <ImageView
        style="@style/GameFooterIcon"
        android:id="@+id/iv_lock"
        android:contentDescription="@string/iv_lock"
        android:src="@drawable/ic_lock_open"
        app:layout_constraintLeft_toRightOf="@id/iv_match_play" />

</merge>
