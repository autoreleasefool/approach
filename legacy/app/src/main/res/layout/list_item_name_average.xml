<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/list_item_min_height"
    android:orientation="horizontal"
    android:foreground="?android:attr/selectableItemBackground"
    android:background="@color/colorListPrimary"
    tools:ignore="RtlHardcoded">

    <CheckBox
        android:id="@+id/check_name_average"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/list_item_margin"
        android:layout_marginBottom="@dimen/list_item_margin"
        android:layout_marginLeft="@dimen/list_item_margin"
        android:layout_gravity="center_vertical"
        android:checked="false"
        android:focusable="false"
        android:clickable="false"
        android:visibility="gone" />

    <ImageView
        style="@style/ListItemIcon"
        android:id="@+id/iv_name_average"
        android:contentDescription="@string/iv_name_average" />

    <TextView
        style="@style/ListItemBodyText"
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_weight="1" />

    <TextView
        style="@style/ListItemDetailText"
        android:id="@+id/tv_average" />

</LinearLayout>
