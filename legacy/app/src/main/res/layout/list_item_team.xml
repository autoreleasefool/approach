<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/list_item_min_height"
    android:orientation="vertical"
    android:foreground="?android:attr/selectableItemBackground"
    android:background="@color/colorListPrimary"
    tools:ignore="RtlHardcoded">

    <TextView
        style="@style/ListItemBodyText"
        android:id="@+id/tv_name" />

    <View style="@style/Separator.Inset.Left" />

    <android.support.design.chip.ChipGroup
        android:id="@+id/cg_members"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/base_margin_large"
        app:chipSpacing="@dimen/list_item_margin" />

</LinearLayout>
