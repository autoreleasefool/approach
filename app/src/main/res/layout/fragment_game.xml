<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ca.josephroque.bowlingcompanion.games.views.GameHeaderView
        android:id="@+id/game_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:fillViewport="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/game_header">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ca.josephroque.bowlingcompanion.games.views.FrameView
                android:id="@+id/frame_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:frameNumber="1" />

            <ca.josephroque.bowlingcompanion.games.views.FrameView
                android:id="@+id/frame_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:frameNumber="2" />

            <ca.josephroque.bowlingcompanion.games.views.FrameView
                android:id="@+id/frame_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:frameNumber="3" />

            <ca.josephroque.bowlingcompanion.games.views.FrameView
                android:id="@+id/frame_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:frameNumber="4" />

            <ca.josephroque.bowlingcompanion.games.views.FrameView
                android:id="@+id/frame_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:frameNumber="5" />

            <ca.josephroque.bowlingcompanion.games.views.FrameView
                android:id="@+id/frame_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:frameNumber="6" />

            <ca.josephroque.bowlingcompanion.games.views.FrameView
                android:id="@+id/frame_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:frameNumber="7" />

            <ca.josephroque.bowlingcompanion.games.views.FrameView
                android:id="@+id/frame_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:frameNumber="8" />

            <ca.josephroque.bowlingcompanion.games.views.FrameView
                android:id="@+id/frame_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:frameNumber="9" />

            <ca.josephroque.bowlingcompanion.games.views.FrameView
                android:id="@+id/frame_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:frameNumber="10" />

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>
