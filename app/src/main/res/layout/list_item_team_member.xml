<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/list_item_min_height"
    android:orientation="horizontal"
    android:foreground="?attr/selectableItemBackground"
    tools:ignore="RtlHardcoded">

    <ImageView
        style="@style/ListItemIcon"
        android:id="@+id/iv_team_member_icon"
        android:contentDescription="@string/iv_team_member_icon" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            style="@style/ListItemBodyText"
            android:id="@+id/tv_team_member_name"
            android:layout_marginBottom="0dp" />

        <TextView
            style="@style/ListItemBodyText"
            android:id="@+id/tv_team_member_league"
            android:textSize="@dimen/text_body"
            android:textColor="@color/secondaryBlackText"
            android:layout_marginTop="@dimen/base_margin_small" />

    </LinearLayout>

    <TextView
        style="@style/ListItemDetailText"
        android:id="@+id/tv_team_member_series"
        android:textSize="@dimen/text_body"
        android:textColor="@color/secondaryBlackText" />

</LinearLayout>
