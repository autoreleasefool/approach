<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/list_item_min_height"
    android:orientation="horizontal"
    android:background="@color/dangerRed"
    android:foreground="?attr/selectableItemBackground"
    tools:ignore="RtlHardcoded">

    <ImageView
        style="@style/ListItemIcon"
        android:contentDescription="@string/iv_delete_item"
        app:srcCompat="@drawable/ic_delete_white_24dp" />

    <TextView
        style="@style/ListItemBodyText"
        android:id="@+id/tv_deleted"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textColor="@color/primaryWhiteText" />

    <TextView
        style="@style/ListItemBodyText"
        android:id="@+id/tv_undo"
        android:layout_width="wrap_content"
        android:layout_margin="0dp"
        android:padding="@dimen/list_item_margin"
        android:textAllCaps="true"
        android:textColor="@color/primaryWhiteText"
        android:text="@string/undo" />

</LinearLayout>
