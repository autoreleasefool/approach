<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/secondary_background"
    android:foreground="?attr/selectableItemBackground"
    tools:ignore="RelativeOverlap,RtlHardcoded,RtlSymmetry">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/list_item_padding"
        android:layout_marginTop="@dimen/list_item_padding">

        <ImageView
            android:id="@+id/iv_name_average_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:alpha="0.54"
            android:paddingLeft="@dimen/list_key_line"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_name_avg_name"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:alpha="0.87"
            android:singleLine="true"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/list_key_line"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_name_average_average"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:alpha="0.54"
            android:gravity="right|center_vertical"
            android:paddingRight="@dimen/list_key_line"
            android:paddingLeft="@dimen/list_key_line"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="bottom"
        android:background="@color/divider" />

</FrameLayout>
