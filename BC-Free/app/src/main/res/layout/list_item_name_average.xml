<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/selectableItemBackground"
    tools:ignore="RelativeOverlap,RtlHardcoded,RtlSymmetry">

    <ImageView
        android:id="@+id/iv_nameavg_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:alpha="0.54"
        android:paddingLeft="@dimen/list_keyline"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_nameavg_name"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:alpha="0.87"
        android:gravity="center"
        android:paddingLeft="@dimen/list_text_keyline"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_nameavg_average"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical"
        android:alpha="0.54"
        android:gravity="center"
        android:paddingRight="@dimen/list_keyline"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

</RelativeLayout>