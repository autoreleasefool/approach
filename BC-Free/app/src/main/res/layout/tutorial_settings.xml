<RelativeLayout
    android:id="@+id/tutorial_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:ignore="RtlHardCoded,RelativeOverlap">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_tutorial_add_2"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_add_black_24dp"
        app:borderWidth="0dp"
        app:elevation="4dp"
        app:fabSize="normal" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_tutorial_add_1"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:layout_toLeftOf="@id/fab_tutorial_add_2"
        android:src="@drawable/ic_share_black_24dp"
        app:borderWidth="0dp"
        app:elevation="4dp"
        app:fabSize="normal" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_tutorial_add_3"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:layout_toRightOf="@id/fab_tutorial_add_2"
        android:src="@drawable/ic_edit_black_24dp"
        app:borderWidth="0dp"
        app:elevation="4dp"
        app:fabSize="normal" />

</RelativeLayout>
