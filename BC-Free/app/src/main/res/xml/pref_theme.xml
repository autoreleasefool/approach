<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:defaultValue="Green"
        android:dialogTitle="@string/pref_theme_colors_dialog"
        android:entries="@array/pref_theme_colors_names"
        android:entryValues="@array/pref_theme_colors_names"
        android:key="pref_theme_colors"
        android:title="@string/pref_theme_colors_title" />

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="pref_theme_light"
        android:summary="@string/pref_theme_light_summaryOn"
        android:title="@string/pref_theme_light_title" />

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="pref_theme_font"
        android:summary="@string/pref_theme_font_summaryOn"
        android:title="@string/pref_theme_font_title" />

</PreferenceScreen>