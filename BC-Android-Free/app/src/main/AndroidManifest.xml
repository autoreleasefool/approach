<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.josephroque.bowlingcompanion" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LeagueEventActivity"
            android:label="@string/title_activity_league_event"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ca.josephroque.bowlingcompanion.MainActivity" />
        </activity>
        <activity
            android:name=".SeriesActivity"
            android:label="@string/title_activity_series" >
            android:parentActivityName=".LeagueEventActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ca.josephroque.bowlingcompanion.LeagueEventActivity" />
        </activity>
        <activity
            android:name=".GameActivity"
            android:label="@string/title_activity_game" >
        </activity>
    </application>

</manifest>
