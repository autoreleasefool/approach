<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:id="@+id/game_relative_layout"
                tools:context="ca.josephroque.bowlingcompanion.GameActivity">

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:id="@+id/hsv_frames"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <at.markushi.ui.CircleButton
        android:id="@+id/button_pin_0"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cb_color="#99CC00"
        app:cb_pressedRingWidth="8dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/hsv_frames"/>

    <at.markushi.ui.CircleButton
        android:id="@+id/button_pin_1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cb_color="#99CC00"
        app:cb_pressedRingWidth="8dip"
        android:layout_below="@+id/button_pin_0"
        android:layout_toLeftOf="@+id/button_pin_2"
        android:layout_toStartOf="@+id/button_pin_2"/>

    <at.markushi.ui.CircleButton
        android:id="@+id/button_pin_2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cb_color="#99CC00"
        app:cb_pressedRingWidth="8dip"
        android:layout_below="@+id/button_pin_1"
        android:layout_centerHorizontal="true"/>

    <at.markushi.ui.CircleButton
        android:id="@+id/button_pin_3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cb_color="#99CC00"
        app:cb_pressedRingWidth="8dip"
        android:layout_below="@+id/button_pin_4"
        android:layout_toRightOf="@+id/button_pin_2"
        android:layout_toEndOf="@+id/button_pin_2"/>

    <at.markushi.ui.CircleButton
        android:id="@+id/button_pin_4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cb_color="#99CC00"
        app:cb_pressedRingWidth="8dip"
        android:layout_below="@+id/hsv_frames"
        android:layout_alignRight="@+id/hsv_frames"
        android:layout_alignEnd="@+id/hsv_frames"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_next_frame"
        android:id="@+id/button_next_frame"
        android:layout_above="@+id/layout_games"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_save_game"
        android:id="@+id/button_save_game"
        android:layout_above="@+id/layout_games"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/layout_games">

    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_prev_frame"
        android:id="@+id/button_prev_frame"
        android:layout_above="@+id/layout_games"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

</RelativeLayout>
